@page "/Sign_up_page"

@inject NavigationManager NavigationManager

<div class="page">
	<main>

		<div class="login_container">
			<button type="button" class="btn-close mb-5" aria-label="Close" onclick="#"></button>

			<h2 class="fw-bold mb-5">User Registration</h2>

			@if (error.Length > 0)
			{
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<strong>@error</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			}

			<div class="container">
				<div class="row g-3 mb-2">
					<div class="col-3">
						First Name
						<input class="form-control" @bind="firstName" placeholder="First Name">
					</div>
					<div class="col-3">
						Middle Name
						<input class="form-control" @bind="middleName" placeholder="Middle Name">
					</div>
					<div class="col-3">
						Last Name
						<input class="form-control" @bind="lastName" placeholder="Last Name">
					</div>
					<div class="col-1">
						Suffix
						<input class="form-control" placeholder="Suffix">
					</div>
				</div>

				<div class="row g-3 mb-2">
					<div class="col-1">
						Age
						<input class="form-control" placeholder="Age">
					</div>
					<div class="col-2">
						Birth Date
						<input class="form-control" placeholder="mm/dd/yyyy">
					</div>
					<div class="col-5">
						Birth Place
						<input class="form-control" placeholder="Full Address">
					</div>
					<div class="col-1">
						Sex
						<input class="form-control" placeholder="Sex">
					</div>
					<div class="col-2">
						Civil Status
						<input class="form-control" placeholder="Civil Status">
					</div>
				</div>

				<div class="col d-flex align-items-center">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="rememberMe">
						<label class="form-check-label" for="termsAndConditions">
							I agree to the terms and conditions
						</label>

					</div>
				</div>
			</div>


			<div class="rpw mb-2">
				<div class="col d-grid">
					<button class="btn btn-primary" @onclick="LoginAsync"> Register</button>
				</div>
			</div>

		</div>
	</main>
</div>


@code {
	public string firstName = "";
	public string middleName = "";
	public string lastName = "";
	public string error = "";

	private void LoginAsync()
	{
		if (string.IsNullOrEmpty(firstName) || string.IsNullOrEmpty(lastName))
		{
			error = "Please fill in both the email and password.";
			return;
		}

		error = "";
		NavigationManager.NavigateTo("/Client_home_page");
	}
}
