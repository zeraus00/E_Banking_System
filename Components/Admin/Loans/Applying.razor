@page "/Applying"
@attribute [Authorize(Roles = "Administrator")]
@rendermode InteractiveServer

@using System.Text.RegularExpressions;

@inject AdminControlledSessionService adminControlledSessionService
@inject AdminDataService adminDataService
@inject NavigationManager Navigation
@inject PageRedirectService redirectService
@inject AdminViewLoans adminViewLoans

<div class="main">
    <div class="dashboard-container">

        <div class="top-bar mx-3">
            <h2>Accounts Applying for Loan</h2>
        </div>

        <hr class="divider" />

        <div class="d-flex align-items-center gap-3 m-3 flex-wrap">

            <div class="d-flex align-items-center gap-3">
                <input class="form-control form-control-sm" @bind="searchAccount" placeholder="Search specific account">
            </div>

            <div class="d-flex align-items-center gap-3">
                <label class="text-light mb-0" style="white-space: nowrap;">Start Date</label>
                <InputDate class="form-control form-control-sm" @bind-Value="startDate" />
            </div>

            <div class="d-flex align-items-center gap-3">
                <label class="text-light mb-0" style="white-space: nowrap;">End Date</label>
                <InputDate class="form-control form-control-sm" @bind-Value="endDate" />
            </div>
            <button class="btn btn-primary btn-sm shadow-sm">Filter</button>
            <button class="btn btn-danger btn-sm shadow-sm">Clear Filter</button>

        </div>

        <hr class="divider" />

        <div class="table-responsive m-4 rounded">
            <table class="table table-bordered text-center">
                <thead class="table-info">
                    <tr>
                        <th class="align-middle">Account<br />Number</th>
                        <th class="align-middle">Name</th>
                        <th class="align-middle">Email Address</th>
                        <th class="align-middle">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in loanAccountList)
                    {

                        <tr class="bg-light">
                            <td>a.StatementDate.ToString("MM/dd/yyyy")</td>
                            <td>@(async _ => await adminDataService.GetAccountNumberAsync(a.AccountId))</td>
                            <td>@(async _ => await adminDataService.GetAccountNameAsync(a.AccountId))</td>
                            <td>@(async _ => await adminDataService.GetUserEmailAsync(a.UserInfoId))</td>
                            <td>
                                <a href="View_details_account" class="btn btn-info btn-secondary btn-sm rounded text-dark shadow-sm" style="border: 2px solid cyan">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="scroll-container gap-3 mx-5">
            <!-- Up Arrow -->
            <button class="arrow-ud">
                <i class="bi bi-chevron-up text-light"></i>
            </button>

            <!-- Down Arrow -->
            <button class="arrow-ud">
                <i class="bi bi-chevron-down text-light"></i>
            </button>
        </div>

    </div>
</div>

@code {

    private string message = "";

    private List<string> accountTypeList = AccountTypes.AS_STRING_LIST;

    private DateTime? startDate = DateTime.Now.AddDays(-DateTime.Now.Day + 1);
    private DateTime? endDate = DateTime.Now;
    private int selectedLoanTypeId = 0;
    private string accountNumber = "";
    private string cleanedAccountNumber = "";
    private string searchAccount = "";
    private string loanStatus = "";
    private int loanId;
    private List<Loan> loanAccountList = new();

    private int remainingAccountsCount;

    // pagination
    private int pageSize = 5;
    private int pageNumber = 1;
    private int availablePages;

    private bool isNextDisabled = false;
    private bool isPreviousDisabled = false;

    protected override async Task OnInitializedAsync()
    {
        isPreviousDisabled = true;
        await LoadLoanAccountsAsync();
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await adminControlledSessionService.ClearAdminControlledSessions();
        }
    }

    private async Task OnFilterAsync()
    {
        if (startDate > endDate)
        {
            await displayMessage("Start date cannot be later than end date.");
            return;
        }

        bool isAccountNumberValid = await ValidateAccountNumberInput();
        if (!isAccountNumberValid)
            return;

        pageNumber = 1;
        await LoadLoanAccountsAsync();
    }

    private async Task OnViewClick(Loan loan)
    {
        try
        {
            LoanViewSession pendingLoanSession = new LoanViewSession()
                {
                    LoanId = loan.AccountId
                };

            await adminControlledSessionService.SetLoanViewSession(pendingLoanSession);

            redirectService.redirectWithNavigationManager(PageRoutes.APPLLYING_LOAN);
        }
        catch (SessionNotFoundException)
        {
            redirectService.redirectWithNavigationManager(PageRoutes.APPLLYING_LOAN);    
        }
    }

    private async Task NextPage()
    {
        isPreviousDisabled = false;
        pageNumber++;
        await LoadLoanAccountsAsync();
        StateHasChanged();
    }

    private async Task PreviousPage()
    {
        if (pageNumber > 1)
        {
            isNextDisabled = false;
            pageNumber--;
            if(pageNumber == 1)
                isPreviousDisabled = true;
            await LoadLoanAccountsAsync();
            StateHasChanged();
        }
    }

    private async Task LoadLoanAccountsAsync()
    {

        loanAccountList = await adminViewLoans.GetFilterLoanAccountApplying(
        loanId: loanId,
        startDate: startDate,
        endDate: endDate,
        loanTypeId: selectedLoanTypeId,
        LoanStatus: loanStatus,
        pageNumber: pageNumber,
        pageSize: pageSize
        );

        remainingAccountsCount = await adminDataService
            .CountRemainingLoansAsync(
                cleanedAccountNumber,
                startDate,
                endDate,
                loanStatus: loanStatus,
                pageNumber: pageNumber,
                pageSize: pageSize
                );

        availablePages = remainingAccountsCount == 0 && pageNumber == 1 ? 
        1 : pageNumber + ((int)Math.Ceiling((double)remainingAccountsCount / 10));

        if (!loanAccountList.Any())
            isNextDisabled = true;
    }

    private async Task<bool> ValidateAccountNumberInput()
    {
        cleanedAccountNumber = accountNumber.Length > 12 ?
            accountNumber.Replace("-", "").Trim() :
            accountNumber.Trim();

        bool isInputInvalid = !string.IsNullOrWhiteSpace(cleanedAccountNumber) &&
            (
                (cleanedAccountNumber.Length != 3 && cleanedAccountNumber.Length != 12) ||
                !Regex.IsMatch(cleanedAccountNumber, @"^\d+$")
            );

        if (isInputInvalid)
        {
            await displayMessage("Please enter a valid account number.");
            return false;
        }
        return true;
    }

    private async Task displayMessage(string msg)
    {
        message = msg;
        StateHasChanged();
        await Task.Delay(3000);
        message = "";
        StateHasChanged();
    }
}
