                        <div class="d-flex">
                            <h4 class="text-success text-center w-100">currentBalance</h4>
                        </div>
                        <div class="custom-card sm mb-0 pb-0">
                            <p class="m-1">
                                <strong>Contact No.:</strong> _clientPhone
                            </p>
                        </div>
                    </section>

                    <section class="carousel-card text-start p-3 border rounded shadow-sm h-100">
