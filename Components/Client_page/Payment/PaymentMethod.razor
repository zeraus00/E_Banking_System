@using E_BankingSystem.Components.Client_page.Destination;
@inject NavigationManager NavigationManager

<div class="d-flex text-light justify-content-start gap-3 mx-5">
    <div class="shipping-container d-flex justify-content-between align-items-center p-3 border rounded bg-light gap-3">

        <div>
            <label class="form-label fw-bold">_cardDestination</label>
            <div class="d-flex align-items-center">
                <img class="logo mx-3" src="/nexus_banking_alt.png" alt="Logo" />
                <div>
                    <div class="text-secondary">_accountName</div>
                    <div class="text-muted small">_accountNumber</div>
                </div>
            </div>
        </div>

        @if(withdrawProcess){

            <!-- radio button -->
            <div class="form-check">
                <input class="form-check-input" type="radio" name="cardRadio1" id="card1" checked/>
                <label class="form-check-label" for="card1"></label>
            </div>
        }
    </div>
</div>

@code {
    private bool withdrawProcess = false;

    protected override void OnInitialized()
    {
        if (NavigationManager.Uri.Contains("/Deposit_amount"))
        {
            withdrawProcess = true;
        }
    }
}

