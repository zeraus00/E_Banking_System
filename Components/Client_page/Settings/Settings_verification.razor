@page "/Settings_verification"
@inject NavigationManager NavigationManager

<div class="page">
	<main>
		<!-- Header -->
		<header class="custom-card-clientpage clientheader px-4 py-4">
			<div>
				<div class="d-flex align-items-center gap-3 ms-3">
					<h1>Verification</h1>
				</div>
			</div>
		</header>

		<!-- Verification Card Container -->
		<div class="card registration shadow-lg mt-3">
			<h3 class="fw-bold text-light mt-5 mx-5">Enter Verification Pin</h3>

			<!-- Instructions -->
			<h5 class="indent fw-light text-light my-3 mx-5">
				A one-time password (OTP) has been sent to your registered mobile number/email. 
				Enter the code to continue.
			</h5>

			<!-- OTP Input Field -->
			<div class="otp-container mt-3 mb-3">
				@for (int i = 0; i < 6; i++)
				{
					<input 
						type="text" 
						class="otp-input" 
						maxlength="1" 
						id="otp-@i" 
						/>
				}
			</div>

			<!-- Continue Button -->
			<NavLink class="btn btn-primary btn-lg d-grid col-4 mx-auto mt-3" href="/Settings_change_password">
				Submit
			</NavLink>

			<!-- Resend Pin Navlink -->
			<NavLink class="nav-link custom-nav-link-2 fw-lighter mx-auto mt-1" href="#">
				Resend pin
			</NavLink>

			<!-- try Another Way Navlink -->
			<NavLink class="nav-link custom-nav-link-2 fw-lighter mx-auto mb-5" href="#">
				Try another way
			</NavLink>

		</div>

	</main>
</div>