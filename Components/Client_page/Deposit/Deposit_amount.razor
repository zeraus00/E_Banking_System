@page "/Deposit_amount"
@inject NavigationManager NavigationManager


<div class="page">
    <main>
        <header class="custom-card-clientpage clientheader px-4 pt-4 pb-4">
            <div class="align-items-start">
                <NavLink class="nav-link custom-nav-link d-flex justify-content-start pb-3" href="/Client_home">
                    ← Go Back
                </NavLink>
                <div class="d-flex align-items-center gap-3 mx-5">
                    <h1>Deposit</h1>
                </div>
            </div>
            <section class="d-flex justify-content-end align-items-end mx-5 gap-2">
                <p class="fs-6 fw-lighter align-text-bottom">Current Balance: </p>
                <div class="custom-card-clientpage current-balance d-flex align-items-center justify-content-center">
                    currentBalance
                </div>
            </section>
        </header>
        <div class="container">
            <section class="card registration shadow-lg d-flex flex-column mt-4 p-3">
                <h3 class="mx-3 my-3 ">Enter Deposit Amount</h3>
                <div class="input-group px-4 mb-4">
                    <span class="input-group-text fs-2">$</span>
                    <input type="number" class="form-control form-control-custom form-control-lg fs-2" placeholder="000-000" />
                </div>

                <div class="d-flex justify-content-between mx-5 align-items-end mb-4">
                    <div class="d-flex flex-column text-start mb-0">
                        <h5 class="mb-1">clientName</h5>
                        <p class="mb-0">accountNumber</p>
                    </div>             
                    
                    <div class="row w-25 gx-2">
                        <div class="col">
                            <NavLink href="/Client_home">
                                <button class="btn btn-primary btn-lg w-100">Go Back</button>
                            </NavLink>
                        </div>
                        <div class="col">
                            <NavLink href="/Deposit_confirmation">
                                <button class="btn btn-primary btn-lg w-100">Continue</button>
                            </NavLink>
                        </div>
                    </div>
                </div>

            </section>
        </div>
    </main>
</div>