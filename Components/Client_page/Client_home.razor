@page "/Client_home"
@inject NavigationManager NavigationManager

<div class="page">
    <main>
        <!-- Welcome Header (Rectangle Style) -->
        <div class="container-md">
            <header class="custom-card client pt-4 pb-4 d-flex justify-content-between align-items-start">
                <div class="mx-5">
                    <h5>Welcome Back</h5>
                    <div class="d-flex align-items-center gap-3">
                        <h1>clientName</h1>
                        <h4 class="account-number">accountNumber</h4>
                    </div>
                </div>
                <div class="notification img mx-5">
                    <img src="/bootstrap/Utilities/Bell.png" alt="Notification Bell" />
                </div>
            </header>
        </div>

        <!-- Main Section: Balance + Actions -->
        <div class="container-md mt-4">
            <div class="row g-3">
                <!-- Balance Card (Rectangle) -->
                <div class="col-12 col-md-6">
                    <section class="custom-card balance p-4 text-center h-100 border rounded shadow-sm bg-white">
                        <h3>Current Balance:</h3>
                        <div class="fs-1 my-3">currentBalance</div>
                        <div class="custom-card sm">
                            <h6>clientPhone</h6>
                        </div>
                    </section>
                </div>

                <!-- Actions: Withdraw, Deposit, Transfer, Loan -->
                <div class="col-12 col-md-6">
                    <div class="row g-3">
                        <div class="col-12 col-sm-6">
                            <a href="/Withdraw_amount" class="nav-link button d-flex justify-content-between align-items-center p-3 border rounded shadow-sm h-100">
                                Withdraw
                                <img src="/bootstrap/Utilities/withdraw.png" alt="Withdraw Icon" style="width: 30px; height: 30px;" />
                            </a>
                        </div>
                        <div class="col-12 col-sm-6">
                            <a href="/Transfer_page" class="nav-link button d-flex justify-content-between align-items-center p-3 border rounded shadow-sm h-100">
                                Transfer
                                <img src="/bootstrap/Utilities/transfer.png" alt="Transfer Icon" style="width: 20px; height: 20px;" />
                            </a>
                        </div>
                        <div class="col-12 col-sm-6">
                            <a href="/Deposit_amount" class="nav-link button d-flex justify-content-between align-items-center p-3 border rounded shadow-sm h-100">
                                Deposit
                                <img src="/bootstrap/Utilities/deposit.png" alt="Deposit Icon" style="width: 30px; height: 30px;" />
                            </a>
                        </div>
                        <div class="col-12 col-sm-6">
                            <a href="/Loan_page" class="nav-link button d-flex justify-content-between align-items-center p-3 border rounded shadow-sm h-100">
                                Loan Payment
                                <img src="/bootstrap/Utilities/loan.png" alt="Loan Icon" style="width: 20px; height: 20px;" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Transactions Section -->
        <div class="container-md mt-4">
            <section class="custom-card transactions">
                <div class="custom-card balance lg text-black p-4 border shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="fs-4 mb-3">Recent Transactions</label>
                        <button type="button" class="btn btn-link text-decoration-none">View All</button>
                    </div>

                    <!-- Transactions List -->
                    <div class="row g-2 mt-3 fs-5">
                        <div class="col-12">
                            <label class="d-block">Deposit - $200</label>
                        </div>
                        <div class="col-12">
                            <label class="d-block">Withdrawal - $50</label>
                        </div>
                        <div class="col-12">
                            <label class="d-block">Transfer - $100</label>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </main>
</div>






