			barangayId = await RegistrationService.RegisterBarangay(selectedBarangay, barangaysFromCity);

			birthRegionId = await RegistrationService.RegisterRegion(selectedBirthRegion, birthRegions);
			birthProvinceId = await RegistrationService.RegisterProvince(selectedBirthProvince, birthProvinces);
			birthCityId = await RegistrationService.RegisterCity(selectedBirthCity, birthCities);





			Name UserName = await RegistrationService.RegisterName(userFirstName, userMiddleName, userLastName, userSuffix);
