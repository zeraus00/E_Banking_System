@page "/Account_opening"
@inject NavigationManager NavigationManager
@using Layout
@layout PlainLayout

<div class="page">
	<main>

		<!-- Registration Box -->
		<div class="card registration mt-3 p-4 shadow-lg">
			<div class="d-flex justify-content-between align-items-center">
				<h3 class="fw-bold text-light">Online Account Opening</h3>

				<!-- Close Button -->
				<NavLink href="/">
					<button class="btn-close" aria-label="Close"></button>
				</NavLink>
			</div>


			<!-- Account Holder Details Border -->
			<div class="d-flex align-items-center my-3">
				<span class="text-light me-2">Account Holder's Details</span>
				<div class="flex-grow-1">
					<hr class="m-0" style="border: 1px solid white; opacity: 100%;">
				</div>
			</div>


			<div class="information_box">


				<!-- Row 1 -->
				<div class="row g-2 mt-2">

					<!-- Account Sub Type -->
					<div class="col-2">
						<label class="text-light">Account Sub-Type</label>
						<select class="form-select form-select-sm" required>
							<option>Personal Account</option>
							<option>Joint Account</option>
						</select>
					</div>

					<!-- Account Product Type -->
					<div class="col-2">
						<label class="text-light">Account Product Type</label>
						<select class="form-select form-select-sm" required>
							<option>Product Type 1</option>
							<option>Product Type 2</option>
							<option>Product Type 3</option>
							<option>Product Type 4</option>
						</select>
					</div>
				</div>


				<!-- Row 2 -->
				<div class="row g-2 mt-2">

					<!-- Primary Accouunt Name -->
					<label class="text-light">Primary Account Name</label>
					<div class="row g-2">

						<!-- First Name -->
						<div class="col-3">
							<input class="form-control form-control-sm" placeholder="First Name">
						</div>

						<!-- Middle Name -->
						<div class="col-3">
							<input class="form-control form-control-sm" placeholder="Middle Name">
						</div>

						<!-- Last Name -->
						<div class="col-3">
							<input class="form-control form-control-sm" placeholder="Last Name">
						</div>

						<!-- Suffix Name -->
						<div class="col-1">
							<input class="form-control form-control-sm" placeholder="Suffix">
						</div>

					</div>

				</div>


				<!-- Row 3 -->
				<div class="row g-2 mt-2">

					<!-- Age -->
					<div class="col-1">
						<label class="text-light">Age</label>
						<input class="form-control form-control-sm" type="number" placeholder="Age" required>
					</div>

					<!-- Sex -->
					<div class="col-1">
						<label class="text-light">Sex</label>
						<select class="form-select form-select-sm" required>
							<option>Male</option>
							<option>Female</option>
						</select>
					</div>

					<!-- Civil  Status -->
					<div class="col-2">
						<label class="text-light">Civil Status</label>
						<select class="form-select form-select-sm" required>
							<option>Single</option>
							<option>Married</option>
							<option>Separated</option>
							<option>Widowed</option>
						</select>
					</div>

					<!-- Religion -->
					<div class="col">
						<label class="text-light">Religion</label>
						<select class="form-select form-select-sm" @bind="selectedReligion">
							@foreach (var option in religionOptions)
							{
								<option value="@option">@option</option>
							}
						</select>
					</div>

					<!-- Contact No -->
					<div class="col">
						<label class="text-light">Contact No.</label>
						<input class="form-control form-control-sm" placeholder="Contact No." required>
					</div>

					<!-- Email Address -->
					<div class="col">
						<label class="text-light">Email Address</label>
						<input type="email" class="form-control form-control-sm" placeholder="Email" required>
					</div>
				</div>
			

				<!-- Row 4 -->
				<div class="row g-2 mt-2">

					<!-- Full Address -->
					<label class="text-light">Full Address</label>

					<div class="row gx-2">
						<!-- Province -->
						<div class="col">
							<select class="form-select form-select-sm" @bind="selectedProvince" required>
								@foreach (var province in provinceOptions)
								{
									<option value="@province">@province</option>
								}
							</select>
						</div>

						<!-- Municipality -->
						<div class="col">
							<select class="form-select form-select-sm" @bind="selectedMunicipality" required>
								@foreach (var municipality in municipalityOptions)
								{
									<option value="@municipality">@municipality</option>
								}
							</select>
						</div>

						<!-- Barangay -->
						<div class="col">
							<select class="form-select form-select-sm" @bind="selectedBarangay" required>
								@foreach (var barangay in barangayOptions)
								{
									<option value="@barangay">@barangay</option>
								}
							</select>
						</div>

						<!-- Street No. -->
						<div class="col">
							<input class="form-control form-control-sm" placeholder="Street No." required>
						</div>

						<!-- House No. -->
						<div class="col">
							<input class="form-control form-control-sm" placeholder="House No." required>
						</div>

					</div>


					<!-- Row 5 -->
					<div class="row g-2 mt-2">

						<!-- Birth Place -->
						<div class="col-3">
							<label class="text-light">Birth Place</label>
							<input class="form-control form-control-sm" placeholder="Birth Place" required>
						</div>

						<!-- Birth Date -->
						<div class="col-3">
							<label class="text-light">Birth Date</label>
							<input class="form-control form-control-sm" type="date" placeholder="mm/dd/yyyy" required>
						</div>

						<!-- Occupation -->
						<div class="col-3">
							<label class="text-light">Occupation</label>
							<input class="form-control form-control-sm" placeholder="Occupation" required>
						</div>
					</div>


					<div class="row g-2 mt-2">


						<!-- Row 6 (Father's Name)-->
						<div class="col-12">

							<label class="text-light">Father's Name</label>
							<div class="row g-2">
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="First Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Middle Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Last Name">
								</div>
								<div class="col-1">
									<input class="form-control form-control-sm" placeholder="Suffix">
								</div>
							</div>
						</div>


						<!-- Row 7 (Mother's Name)-->
						<div class="col-12">
							<label class="text-light">Mother's Maiden Name</label>
							<div class="row g-2">
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="First Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Middle Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Last Name">
								</div>
								<div class="col-1">
									<input class="form-control form-control-sm" placeholder="Suffix">
								</div>
							</div>
						</div>


						<!-- Row 8 (Beneficiary's Name) -->
						<div class="col-12">
							<label class="text-light">Beneficiary's Name</label>
							<div class="row g-2">
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="First Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Middle Name">
								</div>
								<div class="col-3">
									<input class="form-control form-control-sm" placeholder="Last Name">
								</div>
								<div class="col-1">
									<input class="form-control form-control-sm" placeholder="Suffix">
								</div>
							</div>
						</div>
					</div>

					<div class="row g-3 mt-3">
						<!-- Upload Government ID -->
						<div class="col-md-4">
							<label class="text-light">Upload Government Valid ID (Front & Back)</label>

							<!-- View Button -->
							<div class="d-flex gap-2">
								<input type="file" class="btn btn-light btn-sm w-75" required />
								<button class="btn btn-outline-light">View</button>
							</div>
						</div>

						<!-- Upload 1x1 Picture -->
						<div class="col-md-4">
							<label class="text-light">Upload 1x1 Picture</label>

							<!-- View BUtton -->
							<div class="d-flex gap-2">
								<input type="file" class="btn btn-light btn-sm w-75" required />
								<button class="btn btn-outline-light">View</button>
							</div>
						</div>
					</div>

					<!-- Terms and Conditions Checkbox -->
					<div class="form-check d-flex justify-content-end mt-3">
						<input class="form-check-input mx-2" type="checkbox" id="termsAndConditions" required>
						<label class="form-check-label text-light" for="termsAndConditions">
							I accept the terms and conditions
						</label>
					</div>

					<!-- Register Button -->
					<div class="text-end mt-3">
						<button class="btn btn-primary btn-secondary" @onclick="LoginAsync">Submit Application</button>
					</div>

				</div>
			</div>
		</div>
	</main>
</div>

@code {
	public string firstName = "";
	public string middleName = "";
	public string lastName = "";
	public string error = "";

	private string selectedReligion;
	private List<string> religionOptions = new List<string>
	{
		"Religion 1",
		"Religion 2",
		"Religion 3",
		"Religion 4"
	};

	private string selectedProvince;
	private string selectedMunicipality;
	private string selectedBarangay;

	private List<string> provinceOptions = new List<string>
	{
		"Province 1",
		"Province 2",
		"Province 3",
		"Province 4"
	};

	private List<string> municipalityOptions = new List<string>
	{
		"Municipality 1",
		"Municipality 2",
		"Municipality 3",
		"Municipality 4"
	};

	private List<string> barangayOptions = new List<string>
	{
		"Barangay 1",
		"Barangay 2",
		"Barangay 3",
		"Barangay 4"
	};

	private void LoginAsync()
	{
		if (string.IsNullOrEmpty(firstName) || string.IsNullOrEmpty(lastName))
		{
			error = "Please fill in both the email and password.";
			return;
		}

		error = "";
		NavigationManager.NavigateTo("/Client_home_page");
	}
}

